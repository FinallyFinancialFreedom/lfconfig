# most from https://github.com/rockyzhang24/dotfiles/blob/master/.config/lf/
# ========== General settings ==========

set shell zsh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set icons
# set drawbox
set incsearch
set smartcase
set ignorecase
set anchorfind
set findlen 1
set tabstop 4
set info 'size'
set preview
set previewer ~/.config/lf/previewer
set dircounts
set drawbox


# ========== Key Bindings ==========
# disable defaults

map . set hidden!
map d delete
map p paste
map x cut
map y copy
map S $open $f
# Switch keymap for lf opened inside nvim and outside
map <enter> $bash ~/.config/nvim/lfrunner.bash
map e $bash ~/.config/nvim/lfrunner.bash
map <c-g> $lazygit
map E $hx $f
map C $code $f
map R reload
map a touch
map A mkdir
map \$ shell
map ? help
map i $bat $f
map J push :jump<space>
map zl push :jumplist<enter>

# ========== Functions ==========

cmd open &{{
  case $(file --mime-type "$(readlink -f $f)" -b) in
    text/*|application/json|inode/x-empty|application/octet-stream) lf -remote "send $id \$$EDITOR \$fx";;
    *) for f in $fx; do open $f > /dev/null 2> /dev/null & done;;
  esac
}}

cmd jump %{{
	result="$(zoxide query $@ | sed 's/\\/\\\\/g;s/"/\\"/g')"
	lf -remote "send $id cd \"$result\""
}}

cmd jumplist ${{
	result="$(zoxide query -i | sed 's/\\/\\\\/g;s/"/\\"/g')"
	lf -remote "send $id cd \"$result\""
}}
